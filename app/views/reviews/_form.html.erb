<%= form_for @review do |f| %>

  <%= render "shared/errors", object: @review %>

  <p>
    <%= f.label :title  %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :restaurant  %>
    <%= f.text_field :restaurant %>
  </p>
  <p>
    <%= f.label :body  %>
    <%= f.text_area :body %>
  </p>
   <p>
    <%= f.label :score  %>
    <%= f.number_field :score %>
  </p>

  <p>
    <%= f.label :ambiance  %>
    <%= f.text_field :ambiance %>
  </p>

  <p>
    <%= f.submit "Save", class: "orange-button" %>
  </p>

<% end %>
