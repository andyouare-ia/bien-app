<%= simple_form_for @review do |f| %>

  <%= render "shared/errors", object: @review %>

  <%= f.input :title %>
  <%= f.input :restaurant %>
  <%= f.input :address %>
  <%= f.input :photo %>
  <%= f.input :body %>
  <%= f.input :cuisine %>
  <%= f.input :price, collection: Review::PRICE, prompt: "Select a price range" %>
  <%= f.input :score, collection: 1..10, prompt: "Score this restaurant" %>
  <%= f.input :ambiance %>
  <br>
  <%= f.button :submit, class: "orange-button" %>

<% end %>
